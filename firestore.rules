rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    match /users/{userId} {
      allow read: if request.auth != null;  // authenticated users can read profiles
      allow write: if request.auth != null && request.auth.uid == userId; 
      // users can only edit their own profile
    }

    // Products Collection
    match /products/{productId} {
      allow read: if true; // anyone can view products
      
      // Farmers can create products
      allow create: if request.auth != null &&
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "farmer";
      
      // Farmers can update/delete their own products
      allow update, delete: if request.auth != null &&
                            resource.data.ownerId == request.auth.uid;

      // Admin can do anything
      allow write: if request.auth != null &&
                   get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // Orders Collection
    match /orders/{orderId} {
      // Buyers can create orders
      allow create: if request.auth != null &&
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "buyer";
      
      // Buyers can view only their own orders
      allow read: if request.auth != null &&
                  resource.data.buyerId == request.auth.uid;
      
      // Admin can read all orders
      allow read, write: if request.auth != null &&
                         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }
  }
}